# ===========================================
# BSC FRONTEND PRODUCTION ENVIRONMENT
# ===========================================

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=https://api.yourdomain.com
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_TITLE=Bulak Smart Connect
VITE_APP_DESCRIPTION=Municipal Services Digital Platform
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false

# Storage Configuration
VITE_STORAGE_PREFIX=bulak_smart_connect_

# Print Settings (Production)
VITE_PRINT_ENABLED=true
VITE_PRINT_COPIES=1
VITE_PRINTER_NAME=default
VITE_PRINT_SERVER_URL=http://your-print-server:3001

# External Services (Production Keys)
VITE_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key
VITE_RECAPTCHA_SITE_KEY=your_production_recaptcha_site_key

# Queue System Configuration
VITE_QUEUE_REFRESH_INTERVAL=10000
VITE_QUEUE_AUTO_REFRESH=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# MinIO Configuration (Production bucket name)
VITE_MINIO_ENDPOINT=https://your-minio-endpoint.com
VITE_MINIO_BUCKET_NAME=bulak-smart-connect

# Notification Settings
VITE_NOTIFICATION_TIMEOUT=5000
VITE_ENABLE_SOUND_NOTIFICATIONS=true

# UI Configuration
VITE_THEME_PRIMARY=#184a5b
VITE_THEME_SECONDARY=#ffffff
VITE_SIDEBAR_DEFAULT_OPEN=false

# Production URLs
VITE_ADMIN_PANEL_URL=https://yourdomain.com/AdminHome
VITE_USER_DASHBOARD_URL=https://yourdomain.com/UserDashboard

# Endpoints Configuration
VITE_AUTH_ENDPOINT=/auth
VITE_QUEUE_ENDPOINT=/queue
VITE_APPOINTMENTS_ENDPOINT=/appointments
VITE_ANNOUNCEMENTS_ENDPOINT=/announcements
VITE_DOCUMENT_APPLICATIONS_ENDPOINT=/document-applications
VITE_USERS_ENDPOINT=/users
